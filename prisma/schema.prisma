generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:src/database/db.sqlite"
}

model Files {
  id          String  @id @default(uuid())
  fileName    String
  originalFileName String
  mimeType    String
  refId   String
  category    String
  createdAt   DateTime @default(now())
}